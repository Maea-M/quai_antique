{% extends 'base.html.twig' %}

{% block title %}Galerie d'images{% endblock %}

{% block body %}
    <h1>Galerie d'images</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre de l'image</th>
                <th>Image à télécharger</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image_gallery in image_galleries %}
            <tr>
                <td>{{ image_gallery.id }}</td>
                <td>{{ image_gallery.title }}</td>
                <td>{{ image_gallery.image }}</td>
                <td>
                    <a href="{{ path('app_image_gallery_show', {'id': image_gallery.id}) }}">show</a>
                    <a href="{{ path('app_image_gallery_edit', {'id': image_gallery.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune image enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_image_gallery_new') }}">Créér une nouvelle image</a>
{% endblock %}
